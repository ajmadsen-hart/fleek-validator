{
  "swagger": "2.0",
  "info": {
    "title": "Fleek Validator Test",
    "version": "0.0.1"
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["users"],
        "parameters": [
          {
            "name"        : "name",
            "description" : "name",
            "in"          : "body",
            "type"        : "string",
            "required"    : true,
            "trim"        : true
          }
        ],
        "responses": {
          "201": {
            "description": "User created",
            "schema": {
              "type": "object",
              "items": {
                "$ref": "#/definitions/user"
              }
            }
          },
          "default": {
            "schema": { "$ref": "#/definitions/InternalError" }
          }
        }
      }
    }
  },
  "definitions": {
    "BaseError": {
      "type": "object",
      "required": [
        "data",
        "status",
        "success"
      ],
      "properties": {
        "success": {
          "type": "boolean",
          "default": false
        },
        "data": {
          "type": "mixed"
        },
        "status": {
          "type": "integer",
          "minimum": 100,
          "maximum": 600
        }
      }
    },
    "InternalError": {
      "allOf": [
        { "$ref": "#/definitions/BaseError" },
        {
          "properties": {
            "status": { "default" : 500 },
            "data": { "default" : "Internal server error" }
          }
        }
      ]
    },
    "NotFoundError": {
      "allOf": [
        { "$ref": "#/definitions/BaseError" },
        {
          "properties": {
            "status": { "default" : 404 },
            "data": { "default" : "Not found" }
          }
        }
      ]
    },
    "BadRequestError": {
      "allOf": [
        { "$ref": "#/definitions/BaseError" },
        {
          "properties": {
            "status": { "default" : 400 },
            "data": { "default" : "Bad request" }
          }
        }
      ]
    },
    "NotAuthorizedError": {
      "allOf": [
        { "$ref": "#/definitions/BaseError" },
        {
          "properties": {
            "status": { "default" : 401 },
            "data": { "default" : "Not authorized" }
          }
        }
      ]
    }
  }
}
